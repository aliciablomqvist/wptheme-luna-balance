{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        {
          "slug": "base",
          "color": "#F5F5F5",
          "name": "Base White"
        },
        {
          "slug": "warm-clay",
          "color": "#C7B8A9",
          "name": "Warm Clay"
        },
        {
          "slug": "sage",
          "color": "#92A090",
          "name": "Sage Green"
        },
        {
          "slug": "charcoal",
          "color": "#2F2F2F",
          "name": "Charcoal"
        },
        {
          "slug": "off-white",
          "color": "#F4EFEA",
          "name": "Off White"
        }
      ],
      "custom": true,
      "customGradient": true
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Aboreto, serif",
          "name": "Aboreto",
          "slug": "aboreto",
          "fontFace": [
            {
              "fontFamily": "Aboreto",
              "fontWeight": "300 400",
              "fontStyle": "normal",
              "src": [
                "https://fonts.googleapis.com/css2?family=Aboreto:wght@300;400&display=swap"
              ]
            }
          ]
        },
        {
          "fontFamily": "Lateef, serif",
          "name": "Lateef",
          "slug": "lateef",
          "fontFace": [
            {
              "fontFamily": "Lateef",
              "fontWeight": "300 400",
              "fontStyle": "normal",
              "src": [
                "https://fonts.googleapis.com/css2?family=Lateef:wght@300;400&display=swap"
              ]
            }
          ]
        },
        {
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
          "name": "System Font",
          "slug": "system-font"
        }
      ],
      "fontSizes": [
        {
          "size": "0.75rem",
          "slug": "x-small",
          "name": "Extra Small"
        },
        {
          "size": "0.85rem",
          "slug": "small",
          "name": "Small"
        },
        {
          "size": "1rem",
          "slug": "medium",
          "name": "Medium"
        },
        {
          "size": "1.1rem",
          "slug": "large",
          "name": "Large"
        },
        {
          "size": "1.5rem",
          "slug": "x-large",
          "name": "Extra Large"
        },
        {
          "size": "2.5rem",
          "slug": "xx-large",
          "name": "Extra Extra Large"
        },
        {
          "size": "5rem",
          "slug": "huge",
          "name": "Huge"
        }
      ],
      "customFontSize": true,
      "fontStyle": true,
      "fontWeight": true,
      "letterSpacing": true,
      "lineHeight": true,
      "textDecoration": true,
      "textTransform": true
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "blockGap": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--charcoal)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--lateef)",
      "fontSize": "1rem",
      "fontWeight": "300",
      "lineHeight": "1.8"
    },
    "spacing": {
      "padding": {
        "top": "0",
        "right": "0",
        "bottom": "0",
        "left": "0"
      },
      "blockGap": "2rem"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--aboreto)",
          "fontSize": "5rem",
          "fontWeight": "300",
          "lineHeight": "1.2",
          "letterSpacing": "0.2em"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--aboreto)",
          "fontSize": "2.5rem",
          "fontWeight": "300",
          "lineHeight": "1.3",
          "letterSpacing": "0.1em"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--lateef)",
          "fontSize": "1.1rem",
          "fontWeight": "400",
          "lineHeight": "1.4"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--aboreto)",
          "fontSize": "0.9rem",
          "fontWeight": "400",
          "lineHeight": "1.4",
          "letterSpacing": "0.05em"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--charcoal)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--sage)"
          }
        }
      },
      "button": {
        "border": {
          "radius": "25px"
        },
        "color": {
          "background": "var(--wp--preset--color--sage)",
          "text": "var(--wp--preset--color--base)"
        },
        "typography": {
          "fontSize": "0.9rem",
          "fontWeight": "400",
          "letterSpacing": "0.05em"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--charcoal)"
          }
        }
      }
    },
    "blocks": {
      "core/navigation": {
        "typography": {
          "fontSize": "0.85rem",
          "fontWeight": "300",
          "letterSpacing": "0.05em"
        }
      },
      "core/separator": {
        "color": {
          "background": "var(--wp--preset--color--warm-clay)"
        },
        "spacing": {
          "margin": {
            "top": "0",
            "bottom": "0"
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ],
  "customTemplates": [
    {
      "name": "blank",
      "title": "Blank",
      "postTypes": ["page", "post"]
    },
    {
      "name": "page-no-title",
      "title": "Page (No Title)",
      "postTypes": ["page"]
    }
  ]
}
